&GLOBAL
  PROJECT {your project name here}
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
    POTENTIAL_FILE_NAME POTENTIAL
    &QS
      METHOD GPW
    &END QS
    &SCF
      MAX_SCF 200
      EPS_SCF 1.0E-06
      &OT
        MINIMIZER CG
        LINESEARCH 3PNT
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        MAX_SCF 10
        EPS_SCF 1.0E-06
      &END OUTER_SCF
      &PRINT
        &RESTART OFF
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
        &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          REFERENCE_FUNCTIONAL PBE
          PARAMETER_FILE_NAME ./dftd3.dat
          R_CUTOFF 15
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    &MGRID
      NGRIDS 5
      CUTOFF {insert cutoff}
      REL_CUTOFF {insert rel cut off}
    &END MGRID
  UKS
  MULTIPLICITY {insert multiplicity}
  &END DFT
  &SUBSYS
    &CELL
      ABC {insert a b c}
      ALPHA_BETA_GAMMA {insert alpha beta gamma}
    &END
    &TOPOLOGY
      COORD_FILE_NAME {insert *.xyz file name}
      COORD_FILE_FORMAT XYZ
    &END
    &KIND {insert element name, repeat section for any additional elements present}
      BASIS_SET {insert basis set; we typically use TZVP-MOLOPT-SR-GTH for metals and TZVP-MOLOPT-GTH for non-metals}
      POTENTIAL {insert potential, typically GTH-PBE, completely replace line with 'GHOST' for ghost atoms}
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
